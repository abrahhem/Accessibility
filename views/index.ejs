<!DOCTYPE html>
<html>
<head>
    <title>Accessibility</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/login.css">
    <link rel="icon" href="/includes/favicon.png">
</head>

<body>

<div id="cont" class="cont">
    <!-- FORM SECTION -->
    <div class="row-s">
        <!-- SIGN UP -->
        <div class="col align-items-center flex-col sign-up">
            <div class="form-wrapper align-items-center">
                <form class="form sign-up" id="sign-up">
                    <div class="row g-2 mt-3">
                        <div class="form-floating name">
                            <input type="text" class="form-control sign-up-inputs" id="fist-name-sign-up" placeholder="First name" required>
                            <label for="fist-name-sign-up">First name</label>
                        </div>
                        <div class="form-floating name">
                            <input type="text" class="form-control sign-up-inputs" id="last-name-sign-up" placeholder="First name" required>
                            <label for="last-name-sign-up">Last name</label>
                        </div>
                    </div>
                    <div class="form-floating">
                        <input type="date" class="form-control sign-up-inputs" id="b-date-name-sign-up" placeholder="Birth date" required>
                        <label for="b-date-name-sign-up">Birth date</label>
                    </div>
                    <div class="form-floating">
                        <select class="form-select sign-up-inputs" id="gender-sign-up" aria-label="Floating label select example" required>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                        <label for="floatingSelect">Gender</label>
                    </div>
                    <div class="form-floating">
                        <input type="email" class="form-control sign-up-inputs" id="email-sign-up" placeholder="Email address" required>
                        <label for="email-sign-up">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control sign-up-inputs" id="password-sign-up" placeholder="Password" required>
                        <label for="password-sign-up">Password</label>
                    </div>
                    <div class="form-floating">
                        <input type="file" class="form-control sign-up-inputs" id="image-sign-up" onchange="FileInput()" accept="image/*" placeholder="Profile image">
                        <label for="image-sign-up">Profile image</label>
                    </div>
                    <button type="submit">Sign up</button>
                    <div id="alert-sign-up" role="alert" hidden></div>
                    <p>
                        <span>Already have an account?</span>
                        <b onclick="toggle()" class="pointer">Sign in here</b>
                    </p>
                </form>
            </div>
        </div>
        <!-- END SIGN UP -->
        <!-- SIGN IN -->
        <div class="col w-100 align-items-center flex-col sign-in">
            <div class="form-wrapper align-items-center">
                <form class="form sign-in" id="sign-in">
                    <div class="form-floating mb-3 mt-3">
                        <input type="email" class="form-control sign-in-inputs" id="email-sign-in" placeholder="Email address" required>
                        <label for="email-sign-in">Email address</label>
                    </div>
                    <div class="form-floating  mb-3">
                        <input type="password" class="form-control sign-in-inputs" id="password-sign-in" placeholder="Password" required>
                        <label for="password-sign-in">Password</label>
                    </div>
                    <button type="submit">Sign in</button>
                    <div id="alert-sign-in" class="alert alert-danger mt-3" role="alert" hidden></div>
                    <p>
                        <b>Forgot password?</b>
                    </p>
                    <p>
                        <span>Don't have an account?</span>
                        <b onclick="toggle()" class="pointer">Sign up here</b>
                    </p>
                </form>
            </div>
            <div class="form-wrapper">
            </div>
        </div>
        <!-- END SIGN IN -->
    </div>
    <!-- END FORM SECTION -->
    <!-- CONTENT SECTION -->
    <div class="row-s content-row">
        <!-- SIGN IN CONTENT -->
        <div class="col align-items-center flex-col">
            <div class="text sign-in">
                <h2>Welcome</h2>
                <img class="logo" src="/includes/logo-white.png" alt="Accessibility">
            </div>
            <div class="img sign-in">
            </div>
        </div>
        <!-- END SIGN IN CONTENT -->
        <!-- SIGN UP CONTENT -->
        <div class="col align-items-center flex-col">
            <div class="img sign-up">

            </div>
            <div class="text sign-up">
                <h2>Join us</h2>
                <img id="preview" src="https://res.cloudinary.com/dfp62w83h/image/upload/v1672353262/profiles/default_profile_dyxvgf.png" alt="Profile image">
            </div>
        </div>
        <!-- END SIGN UP CONTENT -->
    </div>
    <!-- END CONTENT SECTION -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <script src="/js/login.js"></script>
</body>
</html>
